<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="charset={{ response.charset }}"/>
    {% block master_head %}
    {% endblock %}
    <title>{% block master_title %}{% endblock %}</title>
    <!--<link rel="stylesheet" type="text/css" media="screen" href="{{tg.url('/css/bootstrap.min.css')}}" />-->
    <link rel="stylesheet" type="text/css" media="screen" href="{{ tg.url('/css/style.css') }}"/>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="{{ tg.url('/bootstrap-3.3.7-dist/css/bootstrap.min.css') }}">
    <!-- Optional theme -->
    <link rel="stylesheet" href="{{ tg.url('/bootstrap-3.3.7-dist/css/bootstrap-theme.min.css') }}">
    <!-- font-awesome.min.css -->
    <link rel="stylesheet" href="{{ tg.url('/font-awesome-4.6.3/css/font-awesome.min.css') }}">
    <!-- metisMenu-2.5.2 -->
    <link rel="stylesheet" href="{{ tg.url('/metisMenu-2.5.2/metisMenu.min.css') }}">
    <!-- jQuery -->
    <script src="{{ tg.url('/javascript/jquery.js') }}"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="{{ tg.url('/bootstrap-3.3.7-dist/js/bootstrap.min.js') }}"></script>
    <!-- metisMenu-2.5.2 -->
    <script src="{{ tg.url('/metisMenu-2.5.2/metisMenu.min.js') }}"></script>
    <!-- app js -->
    <script src="{{ tg.url('/javascript/fortressd.js') }}"></script>
</head>

<body>
<!-- Navbar -->

<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ tg.url('/') }}">
                <img class="pull-left"  width="16" height="16" src="{{ tg.url('/img/fortressd_logo.png') }}" alt="..."> &nbsp;
                {{ tmpl_context.project_name|default('FORTRESSD') }}
            </a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
            {% if tg.auth_stack_enabled and request.identity%}
                <li><a href="{{ tg.url('/request') }}"><i class="fa fa-wpforms"></i> {% trans %}Request{% endtrans %}</a></li>
                <li><a href="{{ tg.url('/history') }}"><i class="fa fa-bar-chart"></i> {% trans %}History{% endtrans %}</a></li>
                <li><a href="{{ tg.url('/terminal') }}"><i class="fa fa-terminal"></i> {% trans %}Terminal{% endtrans %}</a></li>
            {% endif %}
            </ul>
            {% if tg.auth_stack_enabled %}
                <ul class="nav navbar-nav navbar-right">
                    {% if request.identity and 'administration' in request.identity.permissions %}
                        <li><a href="{{ tg.url('/management') }}"><i class="fa fa-legal"></i> {% trans %}Management{% endtrans %}</a></li>
                        <li><a href="{{ tg.url('/settings') }}"><i class="fa fa-gears"></i> {% trans %}Settings{% endtrans %}</a></li>
                    {% endif %}
                    {% if request.identity %}
                        <li><a href="{{ tg.url('/profile') }}"><i class="fa fa-user"></i> {% trans %}Profile{% endtrans %}</a></li>
                        <li><a href="{{ tg.url('/logout_handler') }}"><i class="fa fa-sign-out"></i> {% trans %}Logout{% endtrans %}</a></li>
                    {% else %}
                        <li><a href="{{ tg.url('/login') }}"><i class="fa fa-sign-in"></i> {% trans %}Login{% endtrans %}</a></li>
                    {% endif %}
                </ul>
            {% endif %}
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container-fluid">
    <!-- Flash messages -->
    {% with flash=tg.flash_obj.render('flash', use_js=False) %}
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                {{ flash|safe }}
            </div>
        </div>
    {% endwith %}

    {% block contents %}
    {% endblock %}
</div>

<!-- Footer -->
<footer class="footer hidden-xs hidden-sm">
    <a class="pull-right" href="https://github.com/archsh/fortressd">
        <img style="vertical-align:middle;" src="{{ tg.url('/img/fortressd_logo.png') }}" alt="TurboGears 2"/></a>
    <p>Copyright &copy; {{ tmpl_context.project_name|default('FORTRESSD') }} {{ h.current_year() }}</p>
</footer>

</body>
</html>
